<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<Title>Historical Start</Title>
		<AssemblyTitle>$(Title)</AssemblyTitle>
		<Description>A Cities: Skylines 2 mod.</Description>
		<Authors>algernon</Authors>
		<Copyright>Copyright Â© 2023 algernon</Copyright>
		<Product>$(Title)</Product>
		<Version>0.1.1</Version>
		<LangVersion>9.0</LangVersion>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
	</PropertyGroup>

	<Import Project="Config/Postbuild.csproj" />
	<Import Project="Config/Targets.csproj" />
	<Import Project="Config/References.csproj" />
	
	<ItemGroup>
		<AdditionalFiles Include="stylecop.json" />
	</ItemGroup>
	<ItemGroup>
		<None Include="Config/PostBuild.csproj" />
		<None Include="Config/References.csproj" />
		<None Include="Config/Targets.csproj" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>
	
	<ItemGroup>
		<_UI Include="$(ProjectDir)/UI/*.css" />
		<_UI Include="$(ProjectDir)/UI/*.html" />
		<_UI Include="$(ProjectDir)/UI/*.js" />
	</ItemGroup>
	<Target Name="DeployToModDirectory" AfterTargets="Build">
		<PropertyGroup>
			<DeployDir>$(USERPROFILE)/AppData/LocalLow/Colossal Order/Cities Skylines II/Mods/WorkInProgress/$(SolutionName)</DeployDir>
		</PropertyGroup>
		<Copy SourceFiles="@(_UI)" DestinationFolder="$(DeployDir)/UI" />
	</Target>
</Project>
